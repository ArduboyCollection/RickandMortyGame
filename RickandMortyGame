void setup() {
  arduboy.begin();
  arduboy.setFrameRate(30);
}

void loop() {

  if (!arduboy.nextFrame()) return;
  arduboy.pollButtons();
  arduboy.clear();

  switch (gameProgress)
  {
    case GAME_INTRO:
      arduboy.setCursor(0, 10);
      arduboy.println("Rick and Morty Game");
      arduboy.println("by celine");
      arduboy.println(" ");
      arduboy.println("Press A to start!");
      if (arduboy.justPressed(A_BUTTON)) gameProgress = GAME_START;
      break;
    case GAME_START:
      arduboy.setCursor (0, 0);
      arduboy.println("Choose a Player");
      arduboy.println("A: Rick");
      arduboy.println("B: Morty");
      if (arduboy.justPressed(A_BUTTON)) gameProgress = PLAYER_ONE_WINS;
      else if (arduboy.justPressed(B_BUTTON)) gameProgress = PLAYER_TWO_WINS;
      break;
    case PLAYER_ONE_WINS:
      arduboy.drawBitmap(0, 0, playerrick, 48, 48, WHITE);
      arduboy.setCursor (0, 50);
      arduboy.print("You Win!");
      if (arduboy.justPressed(A_BUTTON | B_BUTTON)) gameProgress = GAME_START;
      break;
    case PLAYER_TWO_WINS:
      arduboy.drawBitmap(0, 0, playermorty, 48, 48, WHITE);
      arduboy.setCursor (0, 50);
      arduboy.print("You Lose!");
      if (arduboy.justPressed(A_BUTTON | B_BUTTON)) gameProgress = GAME_START;
      break;
  }
  arduboy.display();
}
